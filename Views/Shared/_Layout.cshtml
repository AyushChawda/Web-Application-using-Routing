<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        body {
           font-family: Arial, sans-serif;
           background-color: #f0f0f0;
           margin: 0;
           padding: 0;
         }

         .navbar {
             background-color: yellow;
             height: 50px;
             display: flex;
             align-items: center;
             justify-content: space-between;
             padding: 0 20px;
         }

         .navbar h1 {
              margin: 0;
              font-size: 1.5em;
          }

          .navbar a {
              text-decoration: none;
              color: #333;
              margin: 0 10px;
          }

          .navbar a:hover {
              color: #000;
          }

        .footer {
            text-align: center;
            padding: 10px;
            background-color: #333;
            color: #fff;
            position: fixed;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<body style=" margin:0 ; box-sizing:border-box">


    <div class="navbar">
        <h1>Header Section</h1>
        <div>
            <a href="/home">Home</a>
            <a href="/home/about">About</a>
            <a href="/user/">User Controller</a>
        </div>
    </div>

    <div>
        @RenderBody()
    </div>

    <div class="footer">
        <p>&copy; 2025 Your Company. All rights reserved.</p>
    </div>
</body>
</html>
